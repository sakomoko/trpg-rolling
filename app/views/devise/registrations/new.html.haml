%h2 Sign up
= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :builder => BootstrapFormBuilder) do |f|
  %div
    = f.control_group :name do
      = f.text_field :name
  %div
    = f.control_group :email do
      = f.email_field :email
  %div
    = f.control_group :password do
      = f.password_field :password
  %div
    = f.control_group :password_confirmation do
      = f.password_field :password_confirmation
  %div= f.submit "Sign up", :class => "btn"
= render :partial => "devise/shared/links"
