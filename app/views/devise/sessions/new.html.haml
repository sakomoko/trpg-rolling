%h2 Sign in
= form_for(resource, :as => resource_name, :url => session_path(resource_name), :builder => BootstrapFormBuilder) do |f|
  %div
    = f.control_group :email do
      %br/
      = f.email_field :email
  %div
    = f.control_group :password do
      %br/
      = f.password_field :password
  - if devise_mapping.rememberable?
    %div
      = f.check_box :remember_me
      = f.label :remember_me
  %div= f.submit "Sign in", :class => 'btn'
= render :partial => "devise/shared/links"
