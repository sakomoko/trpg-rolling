= form_for @room do |f|
  -if @room.errors.any?
    #error_explanation
      %h2= "#{pluralize(@room.errors.count, "error")} prohibited this room from being saved:"
      %ul
        - @room.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :context
    = f.text_field :context
  .field
    = f.label :static
    = f.check_box :static
  .actions
    = f.submit 'Save'
