= bootstrap_form_for @room, html: {class: "form-horizontal"} do |f|

  = f.control_group :title do
    = f.text_field :title

  = f.control_group :description do
    = f.text_area :description, class: "input-xlarge", rows: 3

  = f.control_group :static  do
    = f.check_box :static, class: "checkbox"

  .form-actions
    = f.submit 'Save', class: 'btn-primary'
