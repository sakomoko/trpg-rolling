= simple_form_for [@parent, @room], html: {class: "form-horizontal"} do |f|

  = f.input :title
  = f.input :description, input_html: {class: "input-xlarge", rows: 3}, as: :text
  = f.input :static, as: :boolean
  - if @room.closed?
    = f.input :closed, as: :boolean

  .form-actions
    = f.button :submit, class: 'btn-primary'
    - if @parent.nil?
      = link_to "back", @room, class: "btn"
    - elsif @parent.class == World
      = link_to "back", @parent, class: "btn"
    - else
      = link_to "back", [@parent.world, @parent], class: "btn"