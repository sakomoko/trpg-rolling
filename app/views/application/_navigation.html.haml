.navbar.navbar-fixed-top
  .navbar-inner
    .container
      = link_to 'TrpgRolling', root_path, class: "brand"
      %ul.nav
        %li= link_to 'Worlds', worlds_path
        %li= link_to 'Rooms', rooms_path
        %li= link_to 'GameSystems', game_systems_path

      - if user_signed_in?
        %ul.nav.pull-right
          %li.dropdown
            %a(href="#" class="dropdown-toggle" data-toggle="dropdown")
              = image_tag "#{(request.ssl? ? 'https://secure' : 'http://www')}.gravatar.com/avatar/#{Digest::MD5.hexdigest current_user.email}?s=30", :class => "img-rounded"
              %b
                = current_user.name
              %b.caret
            %ul.dropdown-menu
              %li= link_to 'Logout', destroy_user_session_path, :method=>'delete'
              %li= link_to 'edit account', edit_user_registration_path
      - else
        %ul.nav
          %li= link_to 'sign up', new_user_registration_path
          %li= link_to 'login', new_user_session_path
